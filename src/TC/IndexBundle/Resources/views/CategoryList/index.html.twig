{% extends_admingenerated "TCIndexBundle:CategoryList:index.html.twig" %}

{% block list_td_column_title %}{{ Category.getTitle(true) }}{% endblock %}

{% block list_object_actions %}
<td class="actions">
    <a class="edit" href="{{ path("TC_IndexBundle_Category_edit", { 'pk': Category.id }) }}" > </a>
    <a class="delete" href="{{ path("TC_IndexBundle_Category_delete", { 'pk': Category.id }) }}" onclick='return confirm("This will delete child categories if any.")'> </a>
    <a style="text-decoration: none; color: black;" class="up" href="{{ path("category_mover_up", { 'pk': Category.id }) }}" >&uarr;</a>
    <a style="text-decoration: none; color: black;" class="down" href="{{ path("category_mover_down", { 'pk': Category.id }) }}" >&darr;</a>
</td>
{% endblock %}